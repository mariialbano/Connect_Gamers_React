# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS POSTGRESQL
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=connect_gamers
DB_USER=postgres
DB_PASSWORD=connectgamers

# ============================================
# CONFIGURAÇÕES DO SERVIDOR
# ============================================
PORT=5000
LOG_DEDUP_MS=0

# ============================================
# OPENAI API (Para moderação IA)
# ============================================
OPENAI_API_KEY=sua_chave_aqui

# ============================================
# AZURE FACE API (Para verificação facial)
# ============================================
FACEPP_API_KEY=sua_chave_aqui
FACEPP_API_SECRET=sua_chave_aqui

# ============================================
# FRONTEND URL (Para redirecionamento do QR Code)
# ============================================                                                                                                                                                      
FRONTEND_URL=CCL

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development

# FACE DEV MODE (usar fallback local p/ testes)
FACE_DEV_MODE=true